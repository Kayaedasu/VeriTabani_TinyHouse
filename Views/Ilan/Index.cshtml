@model List<TinyHouse.Models.Ilan>

@{
    ViewData["Title"] = "İlanlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>İlanlar Listesi</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>İlan ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Durum ID</th>
            <th>Eklenme Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ilan in Model)
        {
            <tr>
                <td>@ilan.IlanID</td>
                <td>@ilan.Baslik</td>
                <td>@ilan.Aciklama</td>
                <td>@ilan.Fiyat.ToString("C")</td>
                <td>@ilan.DurumID</td>
                <td>@ilan.EklenmeTarihi.ToShortDateString()</td>
                <td>
                    <a asp-action="Duzenle" asp-route-id="@ilan.IlanID" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="Sil" asp-route-id="@ilan.IlanID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
