<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TinyHouse</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/evsahibisite.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TinyHouse.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3 rounded-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand text-purple fw-bold" asp-area="" asp-controller="Home" asp-action="Index">TinyHouseEvSahibi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-purple" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple" asp-controller="EvSahibi" asp-action="Ilanlar">İlanlarım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple" asp-controller="EvSahibi" asp-action="Rezervasyonlar">Rezervasyonlarım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple" asp-controller="EvSahibi" asp-action="Yorumlar">Yorumlarım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-purple position-relative" asp-controller="EvSahibi" asp-action="Bildirimler">
                                Bildirimlerim
                                <span class="notification-badge d-none"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white text-center py-2 shadow-sm rounded-top mt-auto">
        <div class="container">
            &copy; 2025 - TinyHouseEvSahibi - <a class="text-white text-decoration-underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
